<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <connectionStrings>
    <add name="ApplicationServices" connectionString="data source=(local);User Id=GetItDoneWeb;Password=gidw;Initial Catalog=GetItDone;App=GetItDone" providerName="System.Data.SqlClient" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
    <add name="TaskModelContainer" connectionString="metadata=res://*/DAL.TaskModel.csdl|res://*/DAL.TaskModel.ssdl|res://*/DAL.TaskModel.msl;provider=System.Data.SqlClient;provider connection string=&quot;data source=(local);Initial Catalog=GetItDone;User Id=GetItDoneWeb;Password=gidw;multipleactiveresultsets=True;App=GetItDone&quot;" providerName="System.Data.EntityClient" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
